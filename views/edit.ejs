<%- include('header') %>
<div class="container mt-5 px-4 media">
  <%- include('components/avatar', { user }) %>
  <div class="media-body">
    <form class='p-3 rounded shadow'
          action="/posts/<%= post._id %>/edit"
          method="post">
      <div class="form-group">
        <label for="title">标题</label>
        <input type="text"
               id="title"
               name="title"
               class="form-control"
               value="<%= post.title %>"
               required>
      </div>
      <div class="form-group">
        <label for="content">内容</label>
        <textarea name="content"
                  id="content"
                  class='form-control'
                  cols="30"
                  rows="10"
                  required><%= post.rawContent %></textarea>
      </div>
      <button type="submit"
              class="btn btn-primary">更新</button>
    </form>
  </div>
</div>
<%- include('footer') %>